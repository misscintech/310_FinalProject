{{! ----------------------------}}

{{#if user}} <!--you can send/view messages if you are logged in boardId = 3-->
<ul>
    {{#each messages}}
    <li>
        {{this.authorName}} : {{this.content}}
    </li>
    {{/each}}
</ul>
<form action="/mboardCb" method="POST">
    <input type="text" placeholder="insert message here" name="message">
    <button type="submit">send</button>
</form>
{{else}}
<p>You can't send a message until you log in :)</p>
{{/if}}
